<form class="form" id="login-form" method="post">
    <p class="form_heading">Đăng nhập</p>
    <a href="./register" class="form_transfer">Đăng ký</a>
    <div class="form_group">
        <p class="form_group--heading">tài khoản</p>
        <input type="text" name="account" placeholder="Nhập tài khoản">
        <span class="form_message">Nhập sai</span>
    </div>
    <div class="form_group">
        <p class="form_group--heading">mật khẩu</p>
        <input type="password" name="password" placeholder="Nhập mật khẩu">
        <span class="form_message">Nhập sai</span>
    </div>
    <button type="submit">Đăng nhập</button>
</form>